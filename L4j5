<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>

        <!-- Console Appender -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %c - %msg%n"/>
        </Console>

        <!-- File Appender -->
        <RollingFile name="APPLICATIONLOG"
                     fileName="logs/application.log"
                     filePattern="logs/application-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %c - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
            </Policies>
        </RollingFile>

        <!-- Async wrapper -->
        <Async name="APPLICATIONLOGAPPENDER">
            <AppenderRef ref="APPLICATIONLOG"/>
        </Async>

    </Appenders>

    <Loggers>

        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="APPLICATIONLOGAPPENDER"/>
        </Root>

    </Loggers>

</Configuration>
